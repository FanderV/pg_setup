Table tab1 as "Мужья" {
  id SERIAL [pk]
  first_name VARCHAR(50)
  middle_name VARCHAR(50)
  last_name VARCHAR(50)
  birth_year INT
  gender CHAR(1) [default: 'M']
  monthly_income NUMERIC(10,2)
}

Table tab2 as "Жены" {
  id SERIAL [pk]
  first_name VARCHAR(50)
  middle_name VARCHAR(50)
  last_name VARCHAR(50)
  birth_year INT
  gender CHAR(1) [default: 'F']
  monthly_income NUMERIC(10,2)
}

Table tab3 as "Дети" {
  id SERIAL [pk]
  first_name VARCHAR(50)
  middle_name VARCHAR(50)
  last_name VARCHAR(50)
  birth_year INT
  gender CHAR(1)
  monthly_income NUMERIC(10,2)
  twin BOOLEAN [default: false]
  father_id INT [ref: > tab1.id]
  mother_id INT [ref: > tab2.id]
}
